@model Project3Travelin.Models.HomeViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Project3Travelin.Resources.SharedResource> L
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Travelin - Tur Rezervasyon</title>
	<link rel="shortcut icon" type="image/x-icon" href="/travelin/images/favicon.png" />
	<link href="/travelin/css/bootstrap.min.css" rel="stylesheet" />
	<link href="/travelin/css/style.css" rel="stylesheet" />
	<link href="/travelin/css/plugin.css" rel="stylesheet" />
	<link rel="stylesheet" href="/travelin/css/fontawesome.min.css" />
	<link rel="stylesheet" href="/travelin/fonts/line-icons.css" />
</head>
<body>

	<!-- Preloader -->
	<div id="preloader"><div id="status"></div></div>

	<!-- Header -->
	<header class="main_header_area">
		<div class="header-content py-1 bg-theme">
			<div class="container d-flex align-items-center justify-content-between">
				<div class="links">
					<ul>
						<li><a href="#" class="white"><i class="icon-location-pin white"></i> Türkiye</a></li>
						<li><a href="#" class="white"><i class="icon-clock white"></i> Pzt-Cum: 09:00 – 18:00</a></li>
					</ul>
				</div>
				<div class="links float-right">
					<ul>
						<li><a href="#" class="white"><i class="fab fa-facebook"></i></a></li>
						<li><a href="#" class="white"><i class="fab fa-twitter"></i></a></li>
						<li><a href="#" class="white"><i class="fab fa-instagram"></i></a></li>
						<li><a href="#" class="white"><i class="fab fa-linkedin"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="header_menu" id="header_menu">
			<nav class="navbar navbar-default">
				<div class="container">
					<div class="navbar-flex d-flex align-items-center justify-content-between w-100 pb-3 pt-3">
						<div class="navbar-header">
							<a class="navbar-brand" href="/Travelin/Index">
								<img src="/travelin/images/logo.png" alt="Travelin" />
							</a>
						</div>
						<div class="navbar-collapse1 d-flex align-items-center">
							<ul class="nav navbar-nav" id="responsive-menu">
								<li><a href="/Travelin/Index">@L["HomePage"]</a></li>
								<li><a href="/Tour/TourList/">@L["TourList"]</a></li>
								<li><a href="/AdminTourRota/TourRotaList/">@L["TourRoutes"]</a></li>
								<li><a href="#">@L["VisaFree"]</a></li>
								<li><a href="#">@L["Domestic"]</a></li>
								<li class="search-main">
									<a href="#search1" class="mt_search"><i class="fa fa-search"></i></a>
								</li>
							</ul>
						</div>
						<!-- Dil Seçici -->
						<div class="d-flex align-items-center gap-2 me-3">
							<a href="/Travelin/SetLanguage?culture=tr&returnUrl=/Travelin/Index" title="Türkçe" style="font-size:1.4rem;text-decoration:none;">🇹🇷</a>
							<a href="/Travelin/SetLanguage?culture=en&returnUrl=/Travelin/Index" title="English" style="font-size:1.4rem;text-decoration:none;">🇬🇧</a>
							<a href="/Travelin/SetLanguage?culture=de&returnUrl=/Travelin/Index" title="Deutsch" style="font-size:1.4rem;text-decoration:none;">🇩🇪</a>
							<a href="/Travelin/SetLanguage?culture=fr&returnUrl=/Travelin/Index" title="Français" style="font-size:1.4rem;text-decoration:none;">🇫🇷</a>
						</div>
						<div class="register-login d-flex align-items-center">
							<a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" class="me-3">
								<i class="icon-user"></i> @L["Login"]
							</a>
							<a href="#booking" class="nir-btn white">@L["BookNow"]</a>
						</div>
						<div id="slicknav-mobile"></div>
					</div>
				</div>
			</nav>
		</div>
	</header>

	<!-- Banner -->
	<section class="banner pt-10 pb-0 overflow-hidden" style="background-image: url(/travelin/images/testimonial.png)">
		<div class="container">
			<div class="banner-in">
				<div class="row align-items-center">
					<div class="col-lg-6 mb-4">
						<div class="banner-content text-lg-start text-center">
							<h4 class="theme mb-0">@L["ExploreWorld"]</h4>
							<h1>@L["HeroTitle"]</h1>
							<p class="mb-4">@L["HeroDesc"]</p>
							<div class="book-form">
								<div class="row d-flex align-items-center justify-content-between">
									<div class="col-lg-6 mb-2">
										<div class="form-group">
											<div class="input-box">
												<select class="niceSelect">
													<option value="">@L["SelectDestination"]</option>
													@foreach (var tour in Model.Tours)
													{
														<option value="@tour.TourId">@tour.City, @tour.Country</option>
													}
												</select>
											</div>
										</div>
									</div>
									<div class="col-lg-6 mb-2">
										<div class="form-group">
											<div class="input-box">
												<input type="date" name="date" />
											</div>
										</div>
									</div>
									<div class="col-lg-6 mb-2">
										<div class="form-group">
											<div class="input-box">
												<select class="niceSelect">
													<option value="">@L["SelectCategory"]</option>
													@foreach (var cat in Model.Categories)
													{
														<option value="@cat.CategoryId">@cat.CategoryName</option>
													}
												</select>
											</div>
										</div>
									</div>
									<div class="col-lg-6 mb-2">
										<div class="form-group">
											<div class="input-box">
												<select class="niceSelect">
													<option value="">@L["SelectDuration"]</option>
													@foreach (var dayNight in Model.Tours.Select(t => t.DayNight).Distinct())
													{
														<option>@dayNight</option>
													}
												</select>
											</div>
										</div>
									</div>
									<div class="col-lg-12">
										<div class="form-group mb-0 text-center">
											<a href="#tours" class="nir-btn w-100"><i class="fa fa-search mr-2"></i> @L["SearchNow"]</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-6 mb-4">
						<div class="banner-image">
							<img src="/travelin/images/travel.png" alt="" />
						</div>
					</div>
				</div>

				<!-- Kategoriler -->
				<div class="category-main-inner border-t pt-1" id="categories">
					<div class="row side-slider">
						@if (Model.Categories != null && Model.Categories.Any())
						{
							@foreach (var cat in Model.Categories)
							{
								<div class="col-lg-3 col-md-6 my-4">
									<div class="category-item box-shadow p-3 py-4 text-center bg-white rounded overflow-hidden">
										<div class="trending-topic-content">
											@if (!string.IsNullOrWhiteSpace(cat.IconUrl))
											{
												<img src="@cat.IconUrl" class="mb-1 d-inline-block" alt="@cat.CategoryName" style="width:48px;height:48px;object-fit:contain;" />
											}
											else
											{
												<i class="bi bi-grid mb-1 d-inline-block fs-2 theme"></i>
											}
											<h4 class="mb-0"><a href="#tours">@cat.CategoryName</a></h4>
										</div>
									</div>
								</div>
							}
						}
						else
						{
							<div class="col-lg-3 col-md-6 my-4">
								<div class="category-item box-shadow p-3 py-4 text-center bg-white rounded overflow-hidden">
									<div class="trending-topic-content">
										<img src="/travelin/images/icons/004-camping-tent.png" class="mb-1 d-inline-block" alt="" />
										<h4 class="mb-0"><a href="#">Kamp</a></h4>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-md-6 my-4">
								<div class="category-item box-shadow p-3 py-4 text-center bg-white rounded overflow-hidden">
									<div class="trending-topic-content">
										<img src="/travelin/images/icons/003-hiking.png" class="mb-1 d-inline-block" alt="" />
										<h4 class="mb-0"><a href="#">Yürüyüş</a></h4>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-md-6 my-4">
								<div class="category-item box-shadow p-3 py-4 text-center bg-white rounded overflow-hidden">
									<div class="trending-topic-content">
										<img src="/travelin/images/icons/005-sunbed.png" class="mb-1 d-inline-block" alt="" />
										<h4 class="mb-0"><a href="#">Plaj Turları</a></h4>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-md-6 my-4">
								<div class="category-item box-shadow p-3 py-4 text-center bg-white rounded overflow-hidden">
									<div class="trending-topic-content">
										<img src="/travelin/images/icons/006-surf.png" class="mb-1 d-inline-block" alt="" />
										<h4 class="mb-0"><a href="#">Sörf</a></h4>
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 3 Adım Bölümü -->
	<section class="about-us pb-6 pt-6" style="background-image: url(/travelin/images/shape4.png); background-position: center">
		<div class="container">
			<div class="section-title mb-6 w-50 mx-auto text-center">
				<h4 class="mb-1 theme1">3 Step</h4>
				<h2 class="mb-1">Find <span class="theme">Travel Perfection</span></h2>
				<p>Hayalinizdeki tatili gerçeğe dönüştürmek için doğru adrestesiniz.</p>
			</div>
			<div class="why-us">
				<div class="why-us-box">
					<div class="row">
						<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
							<div class="why-us-item text-center p-4 py-5 border rounded bg-white">
								<div class="why-us-content">
									<div class="why-us-icon"><i class="icon-flag theme"></i></div>
									<h4><a href="#">Ne Yapmak İstediğinizi Söyleyin</a></h4>
									<p class="mb-0">Hayalinizdeki tatili bizimle paylaşın.</p>
								</div>
							</div>
						</div>
						<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
							<div class="why-us-item text-center p-4 py-5 border rounded bg-white">
								<div class="why-us-content">
									<div class="why-us-icon"><i class="icon-location-pin theme"></i></div>
									<h4><a href="#">Seyahat Lokasyonunuzu Paylaşın</a></h4>
									<p class="mb-0">Gitmek istediğiniz yerleri belirleyin.</p>
								</div>
							</div>
						</div>
						<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
							<div class="why-us-item text-center p-4 py-5 border rounded bg-white">
								<div class="why-us-content">
									<div class="why-us-icon"><i class="icon-directions theme"></i></div>
									<h4><a href="#">Seyahat Tercihinizi Belirtin</a></h4>
									<p class="mb-0">Size özel tur paketleri hazırlayalım.</p>
								</div>
							</div>
						</div>
						<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
							<div class="why-us-item text-center p-4 py-5 border rounded bg-white">
								<div class="why-us-content">
									<div class="why-us-icon"><i class="icon-compass theme"></i></div>
									<h4><a href="#">%100 Güvenilir Tur Ajansıyız</a></h4>
									<p class="mb-0">Güvenle seyahat edin, biz her adımda yanınızdayız.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="white-overlay"></div>
	</section>

	<!-- Hakkımızda -->
	<section class="about-us pt-0" style="background-image: url(/travelin/images/bg/bg-trans.png)">
		<div class="container">
			<div class="about-image-box">
				<div class="row d-flex align-items-center justify-content-between">
					<div class="col-lg-6 mb-4 pe-4">
						<div class="about-image overflow-hidden">
							<img src="/travelin/images/travel1.png" alt="" />
						</div>
					</div>
					<div class="col-lg-6 mb-4 ps-4">
						<div class="about-content text-center text-lg-start mb-4">
							<h4 class="theme d-inline-block mb-0">@L["AboutUs"]</h4>
							<h2 class="border-b mb-2 pb-1">Bizimle Dünyanın Tüm Turlarını Keşfedin.</h2>
							<p class="border-b mb-2 pb-2">
								Yılların deneyimi ve binlerce mutlu müşteri ile seyahat sektöründe güvenilir isim olmaya devam ediyoruz.<br /><br />
								Kültürel zenginlikleri keşfetmek, doğanın güzelliklerini görmek veya huzurlu bir tatil geçirmek için doğru adrestesiniz.
							</p>
							<div class="about-listing">
								<ul class="d-flex justify-content-between">
									<li><i class="icon-location-pin theme"></i> Tur Rehberi</li>
									<li><i class="icon-briefcase theme"></i> Uygun Fiyat</li>
									<li><i class="icon-folder theme"></i> Güvenilir Tur</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="counter-main w-75 float-end">
							<div class="counter p-4 pb-0 box-shadow bg-white rounded">
								<div class="row">
									<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
										<div class="counter-item border-end pe-4">
											<div class="counter-content">
												<h2 class="value mb-0 theme">20</h2>
												<span class="m-0">@L["YearsExp"]</span>
											</div>
										</div>
									</div>
									<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
										<div class="counter-item border-end pe-4">
											<div class="counter-content">
												<h2 class="value mb-0 theme">@Model.Tours.Count</h2>
												<span class="m-0">@L["TourPackages"]</span>
											</div>
										</div>
									</div>
									<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
										<div class="counter-item border-end pe-4">
											<div class="counter-content">
												<h2 class="value mb-0 theme">850</h2>
												<span class="m-0">@L["HappyCustomers"]</span>
											</div>
										</div>
									</div>
									<div class="col-lg-3 col-md-6 col-sm-6 mb-4">
										<div class="counter-item">
											<div class="counter-content">
												<h2 class="value mb-0 theme">@Model.Categories.Count</h2>
												<span class="m-0">@L["Categories"]</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="white-overlay"></div>
	</section>

	<!-- En İyi Tur Paketleri -->
	<section class="trending pb-0" id="tours">
		<div class="container">
			<div class="row align-items-center justify-content-between mb-6">
				<div class="col-lg-7">
					<div class="section-title text-center text-lg-start">
						<h4 class="mb-1 theme1">@L["FeaturedTours"]</h4>
						<h2 class="mb-1">@L["BestTours"]</h2>
						<p>Sizin için özenle seçilmiş tur paketleri ile unutulmaz anılar biriktirin.</p>
					</div>
				</div>
			</div>
			<div class="trend-box">
				<div class="row item-slider">
					@if (Model.Tours != null && Model.Tours.Any())
					{
						@foreach (var tour in Model.Tours)
						{
							<div class="col-lg-4 col-md-6 col-sm-6 mb-4">
								<div class="trend-item rounded box-shadow">
									<div class="trend-image position-relative">
										@if (!string.IsNullOrWhiteSpace(tour.ImageUrl))
										{
											<img src="@tour.ImageUrl" alt="@tour.Title" style="width:100%;height:220px;object-fit:cover;" />
										}
										else
										{
											<img src="/travelin/images/trending/trending2.jpg" alt="@tour.Title" />
										}
										<div class="color-overlay"></div>
									</div>
									<div class="trend-content p-4 pt-5 position-relative">
										<div class="trend-meta bg-theme white px-3 py-2 rounded">
											<div class="entry-author">
												<i class="icon-calendar"></i>
												<span class="fw-bold"> @tour.DayNight</span>
											</div>
										</div>
										<h5 class="theme mb-1"><i class="flaticon-location-pin"></i> @tour.Country</h5>
										<h3 class="mb-1"><a href="#">@tour.Title</a></h3>
										<p class="border-b pb-2 mb-2">
											@((tour.Description?.Length > 80) ? tour.Description.Substring(0, 80) + "…" : tour.Description)
										</p>
										<div class="entry-meta">
											<div class="entry-author d-flex align-items-center justify-content-between">
												<p class="mb-0">
													<i class="icon-location-pin theme"></i>
													<span class="theme fw-bold"> @tour.City</span>
												</p>
												<a href="#booking" class="nir-btn" style="font-size:.78rem;padding:.3rem .8rem;">@L["Booking"]</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						}
					}
					else
					{
						<div class="col-12 text-center py-5">
							<p>Henüz tur eklenmemiş. <a href="/AdminTour/CreateTour">Tur ekle</a></p>
						</div>
					}
				</div>
			</div>
		</div>
	</section>


	@await Component.InvokeAsync("_TourVideoCompoentPartial")

	<!-- Rezervasyon Formu -->
	<section class="trending pb-6 pt-6" id="booking" style="background-image: url(/travelin/images/shape2.png)">
		<div class="container">
			<div class="section-title mb-6 w-75 mx-auto text-center">
				<h4 class="mb-1 theme1">@L["Booking"]</h4>
				<h2 class="mb-1">@L["BookingTitle"]</h2>
			</div>

			@if (TempData["Success"] != null)
			{
				<div class="alert alert-success text-center mb-4" style="border-radius:10px;">
					<i class="bi bi-check-circle-fill me-2"></i> @L["BookingSuccess"]
				</div>
			}

			<div class="row justify-content-center">
				<div class="col-lg-8">
					<div class="bg-white p-5 rounded box-shadow">
						<form asp-controller="Travelin" asp-action="CreateBooking" method="post">
							@Html.AntiForgeryToken()
							<div class="row g-3">
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["Name"]</label>
									<input type="text" name="Name" class="form-control mt-1" placeholder="@L["Name"]" required />
								</div>
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["Surname"]</label>
									<input type="text" name="Surname" class="form-control mt-1" placeholder="@L["Surname"]" required />
								</div>
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["Email"]</label>
									<input type="email" name="Email" class="form-control mt-1" placeholder="@L["Email"]" required />
								</div>
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["Phone"]</label>
									<input type="text" name="Phone" class="form-control mt-1" placeholder="@L["Phone"]" required />
								</div>
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["SelectTour"]</label>
									<select name="TourId" class="form-select mt-1" required>
										<option value="">-- @L["SelectTour"] --</option>
										@foreach (var tour in Model.Tours)
										{
											<option value="@tour.TourId">@tour.Title</option>
										}
									</select>
								</div>
								<div class="col-md-6">
									<label style="font-size:.78rem;font-weight:600;color:#718096;text-transform:uppercase;">@L["BookingDate"]</label>
									<input type="date" name="BookingDate" class="form-control mt-1" required />
								</div>
								<div class="col-12 text-center mt-2">
									<button type="submit" class="nir-btn px-5">
										<i class="icon-calendar me-2"></i> @L["Submit"]
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Yorumlar -->
	<section class="testimonial pt-9" id="testimonials" style="background-image: url(/travelin/images/testimonial.png)">
		<div class="container">
			<div class="section-title mb-6 text-center w-75 mx-auto">
				<h4 class="mb-1 theme1">@L["Reviews"]</h4>
				<h2 class="mb-1">@L["HappyClients"]</h2>
			</div>
			<div class="row align-items-center">
				<div class="col-lg-5 pe-4">
					<div class="testimonial-image">
						<img src="/travelin/images/travel2.png" alt="" />
					</div>
				</div>
				<div class="col-lg-7 ps-4">
					<div class="row review-slider">
						@if (Model.Comments != null && Model.Comments.Any())
						{
							@foreach (var comment in Model.Comments)
							{
								<div class="col-sm-4 item">
									<div class="testimonial-item1 rounded">
										<div class="author-info d-flex align-items-center mb-4">
