@model List<ResultBookingDto>
@{
    Layout = "~/Views/Shared/_TourLayout.cshtml";
    string q = Context.Request.Query["q"];
    string fromDate = Context.Request.Query["fromDate"];
    string toDate = Context.Request.Query["toDate"];
}

@section Styles {
    <style>
        .btn-approve {
            background: #f0fdf4;
            color: #15803d;
        }

            .btn-approve:hover {
                background: #bbf7d0;
                color: #14532d;
            }

        .page-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 1.6rem;
            font-weight: 800;
            color: #1a202c;
            letter-spacing: -.03em;
            line-height: 1;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            background: none;
        }

        .breadcrumb-item {
            font-size: .8rem;
        }

            .breadcrumb-item a {
                color: #2563eb;
                text-decoration: none;
            }

            .breadcrumb-item.active {
                color: #718096;
            }

        .filter-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 1px 4px rgba(0,0,0,.04);
        }

        .table-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,.06);
        }

        .table-card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.1rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            flex-wrap: wrap;
            gap: .75rem;
        }

            .table-card-header .title {
                font-family: var(--font-display);
                font-weight: 700;
                font-size: .95rem;
                color: #1a202c;
                display: flex;
                align-items: center;
                gap: .5rem;
            }

        .booking-count {
            background: #f0fdf4;
            color: #15803d;
            font-size: .72rem;
            font-weight: 600;
            padding: .2rem .6rem;
            border-radius: 20px;
        }

        .bookings-table {
            width: 100%;
            border-collapse: collapse;
        }

            .bookings-table thead th {
                background: #f8fafc;
                font-size: .72rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: .06em;
                color: #718096;
                padding: .85rem 1rem;
                border-bottom: 1px solid #e2e8f0;
                white-space: nowrap;
            }

            .bookings-table tbody tr {
                transition: background .12s;
                border-bottom: 1px solid #f0f4f8;
            }

                .bookings-table tbody tr:last-child {
                    border-bottom: none;
                }

                .bookings-table tbody tr:hover {
                    background: #f8fafc;
                }

            .bookings-table tbody td {
                padding: .85rem 1rem;
                vertical-align: middle;
                font-size: .875rem;
                color: #2d3748;
            }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg,#0ea5e9,#38bdf8);
            display: grid;
            place-items: center;
            color: #fff;
            font-weight: 700;
            font-size: .9rem;
            flex-shrink: 0;
            border: 2px solid #bae6fd;
        }

        .name-cell {
            font-weight: 600;
            color: #1a202c;
            font-size: .88rem;
        }

        .contact-cell {
            font-size: .82rem;
            color: #4a5568;
        }

            .contact-cell i {
                color: #a0aec0;
                font-size: .8rem;
                margin-right: .3rem;
            }

        .tour-badge {
            display: inline-flex;
            align-items: center;
            gap: .3rem;
            background: #eff6ff;
            color: #2563eb;
            font-size: .75rem;
            font-weight: 600;
            padding: .25rem .65rem;
            border-radius: 8px;
        }

        .date-cell {
            font-size: .82rem;
            font-weight: 500;
            color: #2d3748;
            white-space: nowrap;
        }

        .id-badge {
            display: inline-block;
            font-size: .72rem;
            font-weight: 600;
            color: #6366f1;
            background: #eef2ff;
            padding: .18rem .55rem;
            border-radius: 6px;
            font-family: monospace;
        }

        .action-group {
            display: flex;
            align-items: center;
            gap: .35rem;
            flex-wrap: nowrap;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: grid;
            place-items: center;
            border: none;
            cursor: pointer;
            font-size: .85rem;
            transition: all .15s;
            text-decoration: none;
            flex-shrink: 0;
        }

        .btn-edit {
            background: #fffbeb;
            color: #d97706;
        }

            .btn-edit:hover {
                background: #fde68a;
                color: #92400e;
            }

        .btn-delete {
            background: #fff5f5;
            color: #e53e3e;
        }

            .btn-delete:hover {
                background: #fed7d7;
                color: #c53030;
            }

        .btn-detail {
            background: #ebf8ff;
            color: #2b6cb0;
        }

            .btn-detail:hover {
                background: #bee3f8;
                color: #2c5282;
            }

        .pagination-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            border-top: 1px solid #e2e8f0;
            flex-wrap: wrap;
            gap: .75rem;
        }

        .page-info {
            font-size: .8rem;
            color: #718096;
        }

        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
            color: #a0aec0;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                display: block;
            }

            .empty-state p {
                font-size: .9rem;
            }

        @@media (max-width:991px) {
            .bookings-table thead {
                display: none;
            }

            .bookings-table tbody tr {
                display: flex;
                flex-wrap: wrap;
                padding: 1rem;
                border: 1px solid #e2e8f0;
                border-radius: 10px;
                margin: .75rem 1rem;
                gap: .5rem;
            }

            .bookings-table tbody td {
                display: flex;
                align-items: center;
                gap: .5rem;
                padding: .3rem 0;
                border: none;
                width: 100%;
                font-size: .85rem;
            }

                .bookings-table tbody td::before {
                    content: attr(data-label);
                    font-size: .7rem;
                    font-weight: 600;
                    text-transform: uppercase;
                    letter-spacing: .05em;
                    color: #a0aec0;
                    min-width: 90px;
                    flex-shrink: 0;
                }

            .td-avatar {
                order: -1;
                justify-content: center;
            }

                .td-avatar::before {
                    display: none;
                }

            .action-group {
                width: 100%;
                justify-content: flex-end;
            }
        }

        @@media (max-width:575px) {
            .page-header {
                flex-direction: column;
            }
        }
    </style>
}

<div class="page-header">
    <div>
        <h1 class="page-title">Rezervasyon Listesi</h1>
        <nav aria-label="breadcrumb" class="mt-2">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active">Rezervasyonlar</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex align-items-center gap-2">
        <a href="/AdminBooking/ExportToExcel" class="btn btn-success d-flex align-items-center gap-2"
           style="border-radius:10px;font-size:.875rem;font-weight:600;padding:.55rem 1.1rem;">
            <i class="bi bi-file-earmark-excel"></i> Excel İndir
        </a>
        <a href="/AdminBooking/CreateBooking/" class="btn btn-primary d-flex align-items-center gap-2"
           style="border-radius:10px;font-size:.875rem;font-weight:600;padding:.55rem 1.1rem;">
            <i class="bi bi-plus-lg"></i> Yeni Rezervasyon
        </a>
    </div>
</div>

<div class="filter-card">
    <form method="get">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-5">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Ara</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius:8px 0 0 8px;">
                        <i class="bi bi-search text-muted" style="font-size:.85rem;"></i>
                    </span>
                    <input type="text" name="q" value="@q" class="form-control border-start-0 ps-1"
                           placeholder="İsim, e-posta veya telefon..." style="border-radius:0 8px 8px 0;" />
                </div>
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Başlangıç</label>
                <input type="date" name="fromDate" value="@fromDate" class="form-control" style="border-radius:8px;font-size:.875rem;" />
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Bitiş</label>
                <input type="date" name="toDate" value="@toDate" class="form-control" style="border-radius:8px;font-size:.875rem;" />
            </div>
            <div class="col-12 col-md-3 d-flex gap-2 align-self-end">
                <button type="submit" class="btn btn-primary flex-fill" style="border-radius:8px;font-size:.875rem;">
                    <i class="bi bi-funnel me-1"></i> Filtrele
                </button>
                <a href="?" class="btn btn-outline-secondary" style="border-radius:8px;font-size:.875rem;">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </form>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success d-flex align-items-center gap-2 mb-3" style="border-radius:10px;font-size:.875rem;">
        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
    </div>
}

<div class="table-card">
    <div class="table-card-header">
        <div class="title">
            <i class="bi bi-calendar2-check" style="color:#a0aec0;"></i>
            Tüm Rezervasyonlar
            <span class="booking-count">@Model.Count rezervasyon</span>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-calendar2-x"></i>
            <p>Gösterilecek rezervasyon bulunamadı.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="bookings-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Müşteri</th>
                        <th>İletişim</th>
                        <th>Tur</th>
                        <th>Tarih</th>
                        <th>Booking ID</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowIndex = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="#">
                                <span style="font-size:.78rem;color:#a0aec0;font-weight:600;">@rowIndex</span>
                            </td>
                            <td class="td-avatar" data-label="Müşteri">
                                <div style="display:flex;align-items:center;gap:.65rem;">
                                    <div class="avatar">
                                        @(item.Name?.Length > 0 ? item.Name[0].ToString().ToUpper() : "?")
                                    </div>
                                    <div class="name-cell">@item.Name @item.Surname</div>
                                </div>
                            </td>
                            <td data-label="İletişim">
                                <div class="contact-cell">
                                    <div><i class="bi bi-envelope"></i>@item.Email</div>
                                    <div class="mt-1"><i class="bi bi-telephone"></i>@item.Phone</div>
                                </div>
                            </td>
                            <td data-label="Tur">
                                <span class="tour-badge"><i class="bi bi-map"></i>@item.TourTitle</span>
                            </td>
                            <td data-label="Tarih">
                                <span class="date-cell">
                                    <i class="bi bi-calendar3 me-1 text-muted"></i>
                                    @item.BookingDate.ToString("dd.MM.yyyy")
                                </span>
                            </td>
                            <td data-label="Booking ID">
                                <span class="id-badge">@item.BookingId</span>
                            </td>
                            <td data-label="İşlemler">
                                <div class="action-group">
                                    <a asp-action="UpdateBooking" asp-route-id="@item.BookingId"
                                       class="btn-action btn-edit" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn-action btn-detail" title="Detay"
                                            onclick="showBookingDetail('@item.BookingId','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Name))','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Surname))','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Email))','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Phone))','@item.BookingDate.ToString("dd.MM.yyyy")','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.TourTitle))','@item.TourId')">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button" class="btn-action btn-delete" title="Sil"
                                            onclick="confirmDelete('@item.BookingId','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Name + " " + item.Surname))')">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                    <button type="button" class="btn-action btn-approve" title="Onayla"
                                            onclick="confirmApprove('@item.BookingId','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Name + " " + item.Surname))','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Email))')">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        rowIndex++;
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination-wrapper">
            <span class="page-info">@Model.Count rezervasyon gösteriliyor</span>
        </div>
    }
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:420px">
        <div class="modal-content" style="border-radius:14px;border:0;box-shadow:0 20px 60px rgba(0,0,0,.15)">
            <div class="modal-body p-4 text-center">
                <div style="width:60px;height:60px;background:#fff5f5;border-radius:50%;display:grid;place-items:center;margin:0 auto 1.25rem;font-size:1.5rem;color:#e53e3e;">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 style="font-family:var(--font-display);font-weight:700;font-size:1.1rem;color:#1a202c;margin-bottom:.5rem;">Rezervasyon Silinecek</h5>
                <p class="text-muted" style="font-size:.875rem;" id="deleteModalBody"></p>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4 px-4 d-flex gap-2">
                <button type="button" class="btn btn-light flex-fill" data-bs-dismiss="modal" style="border-radius:9px;font-size:.875rem;">İptal</button>
                <form id="deleteForm" method="post" style="flex:1">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100" style="border-radius:9px;font-size:.875rem;">
                        <i class="bi bi-trash3 me-1"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- DETAIL MODAL -->
<div class="modal fade" id="bookingDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:480px">
        <div class="modal-content" style="border-radius:16px;border:0;box-shadow:0 24px 64px rgba(0,0,0,.18);overflow:hidden;">
            <div style="background:linear-gradient(135deg,#0ea5e9 0%,#38bdf8 100%);padding:1.75rem 1.75rem 1.25rem;position:relative;">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" style="position:absolute;top:1rem;right:1rem;"></button>
                <div id="detailAvatar" style="width:52px;height:52px;background:rgba(255,255,255,.2);border-radius:50%;display:grid;place-items:center;font-size:1.4rem;font-weight:800;color:#fff;border:2px solid rgba(255,255,255,.3);margin-bottom:1rem;">?</div>
                <h5 id="detailFullName" style="font-family:var(--font-display);font-weight:800;font-size:1.2rem;color:#fff;margin:0;">—</h5>
                <p style="font-size:.78rem;color:rgba(255,255,255,.7);margin:.25rem 0 0;">Rezervasyon Detayı</p>
            </div>
            <div class="modal-body p-0">
                <div style="padding:1.5rem 1.75rem;display:flex;flex-direction:column;gap:.85rem;">
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">E-posta</span>
                        <span id="detailEmail" style="font-size:.875rem;font-weight:500;color:#2d3748;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Telefon</span>
                        <span id="detailPhone" style="font-size:.875rem;font-weight:500;color:#2d3748;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Tur</span>
                        <span id="detailTourTitle" style="font-size:.875rem;font-weight:600;color:#2563eb;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Tarih</span>
                        <span id="detailDate" style="font-size:.875rem;font-weight:500;color:#2d3748;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Booking ID</span>
                        <span id="detailBookingId" style="font-size:.8rem;font-weight:600;color:#6366f1;background:#eef2ff;padding:.18rem .55rem;border-radius:6px;font-family:monospace;">—</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 px-4 pb-4 pt-0">
                <button type="button" class="btn btn-light w-100" data-bs-dismiss="modal" style="border-radius:9px;font-size:.875rem;">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- APPROVE MODAL -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:420px">
        <div class="modal-content" style="border-radius:14px;border:0;box-shadow:0 20px 60px rgba(0,0,0,.15)">
            <div class="modal-body p-4 text-center">
                <div style="width:60px;height:60px;background:#f0fdf4;border-radius:50%;display:grid;place-items:center;margin:0 auto 1.25rem;font-size:1.5rem;color:#15803d;">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h5 style="font-family:var(--font-display);font-weight:700;font-size:1.1rem;color:#1a202c;margin-bottom:.5rem;">Rezervasyon Onaylanacak</h5>
                <p class="text-muted" style="font-size:.875rem;" id="approveModalBody"></p>
                <p style="font-size:.78rem;color:#a0aec0;margin-top:.5rem;">
                    <i class="bi bi-envelope me-1"></i> Onay e-postası: <strong id="approveEmail"></strong>
                </p>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4 px-4 d-flex gap-2">
                <button type="button" class="btn btn-light flex-fill" data-bs-dismiss="modal" style="border-radius:9px;font-size:.875rem;">İptal</button>
                <form id="approveForm" method="post" style="flex:1">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success w-100" style="border-radius:9px;font-size:.875rem;">
                        <i class="bi bi-check-lg me-1"></i> Onayla
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(bookingId, fullName) {
            document.getElementById('deleteModalBody').textContent = '"' + fullName + '" adlı müşterinin rezervasyonu kalıcı olarak silinecek.';
            document.getElementById('deleteForm').action = '/AdminBooking/DeleteBooking/' + bookingId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function showBookingDetail(bookingId, name, surname, email, phone, date, tourTitle, tourId) {
            document.getElementById('detailAvatar').textContent = name?.charAt(0)?.toUpperCase() || '?';
            document.getElementById('detailFullName').textContent = name + ' ' + surname;
            document.getElementById('detailEmail').textContent = email || '—';
            document.getElementById('detailPhone').textContent = phone || '—';
            document.getElementById('detailTourTitle').textContent = tourTitle || '—';
            document.getElementById('detailDate').textContent = date || '—';
            document.getElementById('detailBookingId').textContent = bookingId || '—';
            new bootstrap.Modal(document.getElementById('bookingDetailModal')).show();
        }

        function confirmApprove(bookingId, fullName, email) {
            document.getElementById('approveModalBody').textContent = '"' + fullName + '" adlı müşterinin rezervasyonu onaylanacak.';
            document.getElementById('approveEmail').textContent = email;
            document.getElementById('approveForm').action = '/AdminBooking/ApproveBooking/' + bookingId;
            new bootstrap.Modal(document.getElementById('approveModal')).show();
        }
    </script>
}