@model List<ResultCategoryDto>

@{
    Layout = "~/Views/Shared/_TourLayout.cshtml";
    string q = Context.Request.Query["q"];
    string status = Context.Request.Query["status"];
}

@section Styles {
    <style>
        .page-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 1.6rem;
            font-weight: 800;
            color: #1a202c;
            letter-spacing: -.03em;
            line-height: 1;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            background: none;
        }

        .breadcrumb-item {
            font-size: .8rem;
        }

            .breadcrumb-item a {
                color: #2563eb;
                text-decoration: none;
            }

            .breadcrumb-item.active {
                color: #718096;
            }

        .filter-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 1px 4px rgba(0,0,0,.04);
        }

        .table-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,.06);
        }

        .table-card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.1rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            flex-wrap: wrap;
            gap: .75rem;
        }

            .table-card-header .title {
                font-family: var(--font-display);
                font-weight: 700;
                font-size: .95rem;
                color: #1a202c;
                display: flex;
                align-items: center;
                gap: .5rem;
            }

        .category-count {
            background: #fdf4ff;
            color: #9333ea;
            font-size: .72rem;
            font-weight: 600;
            padding: .2rem .6rem;
            border-radius: 20px;
        }

        /* TABLE */
        .category-table {
            width: 100%;
            border-collapse: collapse;
        }

            .category-table thead th {
                background: #f8fafc;
                font-size: .72rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: .06em;
                color: #718096;
                padding: .85rem 1rem;
                border-bottom: 1px solid #e2e8f0;
                white-space: nowrap;
            }

            .category-table tbody tr {
                transition: background .12s;
                border-bottom: 1px solid #f0f4f8;
            }

                .category-table tbody tr:last-child {
                    border-bottom: none;
                }

                .category-table tbody tr:hover {
                    background: #f8fafc;
                }

            .category-table tbody td {
                padding: .85rem 1rem;
                vertical-align: middle;
                font-size: .875rem;
                color: #2d3748;
            }

        /* ICON */
        .category-icon-wrap {
            width: 46px;
            height: 46px;
            border-radius: 10px;
            background: #f3e8ff;
            display: grid;
            place-items: center;
            overflow: hidden;
            border: 2px solid #e9d5ff;
            flex-shrink: 0;
        }

            .category-icon-wrap img {
                width: 28px;
                height: 28px;
                object-fit: contain;
            }

        .icon-placeholder {
            width: 46px;
            height: 46px;
            border-radius: 10px;
            background: linear-gradient(135deg, #e2e8f0, #cbd5e0);
            display: grid;
            place-items: center;
            color: #a0aec0;
            font-size: 1.2rem;
            border: 2px solid #e2e8f0;
        }

        .category-name {
            font-weight: 600;
            color: #1a202c;
            font-size: .9rem;
        }

        .id-badge {
            display: inline-block;
            font-size: .72rem;
            font-weight: 600;
            color: #6366f1;
            background: #eef2ff;
            padding: .18rem .55rem;
            border-radius: 6px;
            font-family: monospace;
            letter-spacing: .02em;
        }

        /* STATUS */
        .status-pill {
            display: inline-flex;
            align-items: center;
            gap: .3rem;
            font-size: .73rem;
            font-weight: 600;
            padding: .25rem .65rem;
            border-radius: 20px;
        }

        .status-active {
            background: #f0fdf4;
            color: #15803d;
        }

        .status-passive {
            background: #fff5f5;
            color: #c53030;
        }

        .status-dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .status-active .status-dot {
            background: #22c55e;
        }

        .status-passive .status-dot {
            background: #f87171;
        }

        /* ACTION BUTTONS */
        .action-group {
            display: flex;
            align-items: center;
            gap: .35rem;
            flex-wrap: nowrap;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: grid;
            place-items: center;
            border: none;
            cursor: pointer;
            font-size: .85rem;
            transition: all .15s;
            text-decoration: none;
            flex-shrink: 0;
        }

        .btn-edit {
            background: #fffbeb;
            color: #d97706;
        }

            .btn-edit:hover {
                background: #fde68a;
                color: #92400e;
            }

        .btn-delete {
            background: #fff5f5;
            color: #e53e3e;
        }

            .btn-delete:hover {
                background: #fed7d7;
                color: #c53030;
            }

        .btn-detail {
            background: #ebf8ff;
            color: #2b6cb0;
        }

            .btn-detail:hover {
                background: #bee3f8;
                color: #2c5282;
            }

        .pagination-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            border-top: 1px solid #e2e8f0;
            flex-wrap: wrap;
            gap: .75rem;
        }

        .page-info {
            font-size: .8rem;
            color: #718096;
        }

        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
            color: #a0aec0;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                display: block;
            }

            .empty-state p {
                font-size: .9rem;
            }

        @@media (max-width: 991px) {
            .category-table thead {
                display: none;
            }

            .category-table tbody tr {
                display: flex;
                flex-wrap: wrap;
                padding: 1rem;
                border: 1px solid #e2e8f0;
                border-radius: 10px;
                margin: .75rem 1rem;
                gap: .5rem;
            }

            .category-table tbody td {
                display: flex;
                align-items: center;
                gap: .5rem;
                padding: .3rem 0;
                border: none;
                width: 100%;
                font-size: .85rem;
            }

                .category-table tbody td::before {
                    content: attr(data-label);
                    font-size: .7rem;
                    font-weight: 600;
                    text-transform: uppercase;
                    letter-spacing: .05em;
                    color: #a0aec0;
                    min-width: 90px;
                    flex-shrink: 0;
                }

            .td-icon {
                order: -1;
                justify-content: center;
            }

                .td-icon::before {
                    display: none;
                }

            .action-group {
                width: 100%;
                justify-content: flex-end;
            }
        }

        @@media (max-width: 575px) {
            .page-header {
                flex-direction: column;
            }
        }
    </style>
}

<!-- PAGE HEADER -->
<div class="page-header">
    <div>
        <h1 class="page-title">Kategori Listesi</h1>
        <nav aria-label="breadcrumb" class="mt-2">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Kategoriler</li>
            </ol>
        </nav>
    </div>
    <a href="/AdminCategory/CreateCategory/" class="btn btn-primary d-flex align-items-center gap-2"
       style="border-radius:10px;font-size:.875rem;font-weight:600;padding:.55rem 1.1rem;">
        <i class="bi bi-plus-lg"></i> Yeni Kategori Ekle
    </a>
</div>

<!-- FILTER CARD -->
<div class="filter-card">
    <form method="get" id="filterForm">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-5">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Kategori Ara</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius:8px 0 0 8px;">
                        <i class="bi bi-search text-muted" style="font-size:.85rem;"></i>
                    </span>
                    <input type="text" name="q" value="@q" class="form-control border-start-0 ps-1"
                           placeholder="Kategori adı ara..." style="border-radius:0 8px 8px 0;" />
                </div>
            </div>
            <div class="col-6 col-md-3">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Durum</label>
                <select name="status" class="form-select" style="border-radius:8px;font-size:.875rem;">
                    <option value="">Tümü</option>
                    <option value="true" selected="@(status == "true" ? "selected" : null)">Aktif</option>
                    <option value="false" selected="@(status == "false" ? "selected" : null)">Pasif</option>
                </select>
            </div>
            <div class="col-6 col-md-4 d-flex gap-2 align-self-end">
                <button type="submit" class="btn btn-primary flex-fill" style="border-radius:8px;font-size:.875rem;">
                    <i class="bi bi-funnel me-1"></i> Filtrele
                </button>
                <a href="?" class="btn btn-outline-secondary" style="border-radius:8px;font-size:.875rem;" aria-label="Filtreleri temizle">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </form>
</div>

<!-- TABLE CARD -->
<div class="table-card">
    <div class="table-card-header">
        <div class="title">
            <i class="bi bi-grid" style="color:#a0aec0;"></i>
            Tüm Kategoriler
            <span class="category-count">@Model.Count kategori</span>
        </div>
        <div class="d-flex align-items-center gap-2">
            <span style="font-size:.78rem;color:#a0aec0;">Sırala:</span>
            <select class="form-select form-select-sm" style="width:auto;border-radius:8px;font-size:.78rem;">
                <option>En Yeni</option>
                <option>En Eski</option>
                <option>A-Z</option>
            </select>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-grid"></i>
            <p>Gösterilecek kategori bulunamadı.</p>
            <a href="/AdminCategory/CreateCategory/" class="btn btn-primary btn-sm mt-2" style="border-radius:8px;">Yeni Kategori Ekle</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="category-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Durum</th>
                        <th>Tur ID</th>
                        <th>Kategori ID</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowIndex = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="#">
                                <span style="font-size:.78rem;color:#a0aec0;font-weight:600;">@rowIndex</span>
                            </td>
                            <td data-label="Kategori Adı">
                                <span class="category-name">@item.CategoryName</span>
                            </td>
                            <td data-label="Durum">
                                @if (item.IsStatus)
                                {
                                    <span class="status-pill status-active">
                                        <span class="status-dot"></span> Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="status-pill status-passive">
                                        <span class="status-dot"></span> Pasif
                                    </span>
                                }
                            </td>
                            <td data-label="Tur">
                                <span class="tour-ref-badge">
                                    @item.TourTitle
                                </span>
                            </td>
                            <td data-label="Kategori Adı">
                                <span class="id-badge">@item.CategoryName</span>
                            </td>
                            <td data-label="İşlemler">
                                <div class="action-group">
                                    <a asp-action="UpdateCategory" asp-route-id="@item.CategoryId"
                                       class="btn-action btn-edit"
                                       title="Düzenle"
                                       aria-label="@item.CategoryName kategorisini düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn-action btn-delete"
                                            title="Sil"
                                            aria-label="@item.CategoryName kategorisini sil"
                                            onclick="confirmDelete('@item.CategoryId', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.CategoryName))')">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                    <a asp-controller="Tour" asp-action="TourDetail" asp-route-id="@item.TourId"
                                       class="btn-action btn-detail"
                                       title="Tura Git"
                                       aria-label="@item.CategoryName turana git">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        rowIndex++;
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination-wrapper">
            <span class="page-info">@Model.Count kategori gösteriliyor</span>
        </div>
    }
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:420px">
        <div class="modal-content" style="border-radius:14px;border:0;box-shadow:0 20px 60px rgba(0,0,0,.15)">
            <div class="modal-body p-4 text-center">
                <div style="width:60px;height:60px;background:#fff5f5;border-radius:50%;display:grid;place-items:center;margin:0 auto 1.25rem;font-size:1.5rem;color:#e53e3e;">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 style="font-family:var(--font-display);font-weight:700;font-size:1.1rem;color:#1a202c;margin-bottom:.5rem;">Kategori Silinecek</h5>
                <p class="text-muted" style="font-size:.875rem;" id="deleteModalBody">Bu kategoriyi silmek istediğinize emin misiniz?</p>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4 px-4 d-flex gap-2">
                <button type="button" class="btn btn-light flex-fill" data-bs-dismiss="modal" style="border-radius:9px;font-size:.875rem;">İptal</button>
                <form id="deleteForm" method="post" style="flex:1">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100" style="border-radius:9px;font-size:.875rem;">
                        <i class="bi bi-trash3 me-1"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(categoryId, categoryName) {
            document.getElementById('deleteModalBody').textContent =
                '"' + categoryName + '" adlı kategori kalıcı olarak silinecek. Bu işlem geri alınamaz.';
            document.getElementById('deleteForm').action = '/AdminCategory/DeleteCategory/' + categoryId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}