@model CreateCategoryDto

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Kategori Adı</label>
        <input type="text" asp-for="CategoryName" class="form-control"/>
        <br />
        <label>Kategori Icon Url</label>
        <input type="text" asp-for="IconUrl" class="form-control"/>
        <br />
        <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourList">
            <option value="">Tur seçiniz</option>
        </select>
        <button class="btn btn-success">Kategoriyi Kaydet</button>

    </form>
</div>
