@model CreateCommentDto
@{
    Layout = "~/Views/Shared/_TourLayout.cshtml";
}

@section Styles {
    <style>
        .page-title {
            font-family: var(--font-display);
            font-size: 1.6rem;
            font-weight: 800;
            color: #1a202c;
            letter-spacing: -.03em;
            line-height: 1;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            background: none;
        }

        .breadcrumb-item {
            font-size: .8rem;
        }

            .breadcrumb-item a {
                color: #2563eb;
                text-decoration: none;
            }

            .breadcrumb-item.active {
                color: #718096;
            }

        .form-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,.06);
            max-width: 700px;
        }

        .form-card-header {
            padding: 1.1rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: .5rem;
            font-family: var(--font-display);
            font-weight: 700;
            font-size: .95rem;
            color: #1a202c;
        }

        .form-card-body {
            padding: 1.75rem 1.5rem;
        }

        .form-label {
            font-size: .78rem;
            font-weight: 600;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: .04em;
            margin-bottom: .4rem;
        }

        .form-control, .form-select {
            border-radius: 8px;
            font-size: .875rem;
            border: 1px solid #e2e8f0;
            padding: .55rem .85rem;
            color: #1a202c;
            transition: border-color .15s,box-shadow .15s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #ea580c;
                box-shadow: 0 0 0 3px rgba(234,88,12,.1);
                outline: none;
            }

        .form-card-footer {
            padding: 1.1rem 1.5rem;
            border-top: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: .75rem;
            background: #f8fafc;
        }

        .btn-save {
            border-radius: 9px;
            font-size: .875rem;
            font-weight: 600;
            padding: .5rem 1.4rem;
            background: #ea580c;
            border-color: #ea580c;
        }

            .btn-save:hover {
                background: #c2410c;
                border-color: #c2410c;
            }

        .form-divider {
            height: 1px;
            background: #f0f4f8;
            margin: 1.5rem 0;
        }

        .validation-msg {
            font-size: .75rem;
            color: #e53e3e;
            margin-top: .3rem;
        }

        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            gap: .25rem;
        }

            .star-rating input {
                display: none;
            }

            .star-rating label {
                font-size: 1.5rem;
                color: #e2e8f0;
                cursor: pointer;
                transition: color .15s;
            }

                .star-rating input:checked ~ label,
                .star-rating label:hover,
                .star-rating label:hover ~ label {
                    color: #f59e0b;
                }
    </style>
}

<div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-4">
    <div>
        <h1 class="page-title">Yeni Yorum Ekle</h1>
        <nav aria-label="breadcrumb" class="mt-2">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item"><a href="/AdminComment/CommentList">Yorumlar</a></li>
                <li class="breadcrumb-item active">Yeni Ekle</li>
            </ol>
        </nav>
    </div>
</div>

<div class="form-card">
    <div class="form-card-header">
        <i class="bi bi-chat-left-text-fill" style="color:#ea580c;"></i>
        Yorum Bilgileri
    </div>
    <form asp-action="CreateComment" method="post">
        @Html.AntiForgeryToken()
        <div class="form-card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                    <input asp-for="Name" class="form-control" placeholder="Yorumu yapan kişinin adı" />
                    <span asp-validation-for="Name" class="validation-msg"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TourId" class="form-label">Tur</label>
                    <select asp-for="TourId" class="form-select">
                        <option value="">-- Tur Seçiniz --</option>
                        @if (ViewBag.Tours != null)
                        {
                            foreach (var tour in (IEnumerable<ResultTourDto>)ViewBag.Tours)
                            {
                                <option value="@tour.TourId">@tour.Title</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="TourId" class="validation-msg"></span>
                </div>
                <div class="col-12">
                    <label asp-for="HeadLine" class="form-label">Başlık</label>
                    <input asp-for="HeadLine" class="form-control" placeholder="Yorum başlığı" />
                    <span asp-validation-for="HeadLine" class="validation-msg"></span>
                </div>
                <div class="col-12">
                    <label asp-for="CommentDetail" class="form-label">Yorum</label>
                    <textarea asp-for="CommentDetail" class="form-control" rows="4" placeholder="Yorum detayı..."></textarea>
                    <span asp-validation-for="CommentDetail" class="validation-msg"></span>
                </div>
            </div>

            <div class="form-divider"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Puan</label>
                    <div class="star-rating">
                        <input type="radio" asp-for="Score" value="5" id="star5" />
                        <label for="star5">★</label>
                        <input type="radio" asp-for="Score" value="4" id="star4" />
                        <label for="star4">★</label>
                        <input type="radio" asp-for="Score" value="3" id="star3" />
                        <label for="star3">★</label>
                        <input type="radio" asp-for="Score" value="2" id="star2" />
                        <label for="star2">★</label>
                        <input type="radio" asp-for="Score" value="1" id="star1" />
                        <label for="star1">★</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Durum</label>
                    <div style="display:flex;align-items:center;gap:.75rem;padding:.75rem 1rem;background:#f8fafc;border:1px solid #e2e8f0;border-radius:10px;">
                        <input asp-for="IsStatus" class="form-check-input" type="checkbox" role="switch" style="width:2.2em;height:1.2em;" />
                        <div>
                            <div style="font-size:.875rem;font-weight:600;color:#2d3748;">Yorum Aktif</div>
                            <div style="font-size:.78rem;color:#a0aec0;">Kapalıysa yorum sitede görünmez.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-card-footer">
            <a href="/AdminComment/CommentList" class="btn btn-light" style="border-radius:9px;font-size:.875rem;">
                <i class="bi bi-x-lg me-1"></i> İptal
            </a>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-check-lg me-1"></i> Kaydet
            </button>
        </div>
    </form>
</div>