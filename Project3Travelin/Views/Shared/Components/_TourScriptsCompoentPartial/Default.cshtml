<script>
	$(document).ready(function() {

		$('.js-video-button').click(function() {
			var videoID = $(this).data('video-id');
			var src = "https://www.youtube.com/embed/" + videoID + "?autoplay=1";

			$('.video-container').html(
				'<iframe src="'+src+'" allow="autoplay; encrypted-media" allowfullscreen></iframe>'
			);

			$('.video-figure').css("display","flex").hide().fadeIn();
		});

		$('.video-close, .video-figure').click(function(e) {
			if (e.target !== this) return;
			$('.video-container').html('');
			$('.video-figure').fadeOut();
		});

	});
</script>