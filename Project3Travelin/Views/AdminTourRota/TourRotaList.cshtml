@model List<ResultTourRotaDto>
@{
    Layout = "~/Views/Shared/_TourLayout.cshtml";
    string q = Context.Request.Query["q"];
}

@section Styles {
    <style>
        .page-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 1.6rem;
            font-weight: 800;
            color: #1a202c;
            letter-spacing: -.03em;
            line-height: 1;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            background: none;
        }

        .breadcrumb-item {
            font-size: .8rem;
        }

            .breadcrumb-item a {
                color: #2563eb;
                text-decoration: none;
            }

            .breadcrumb-item.active {
                color: #718096;
            }

        .filter-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 1px 4px rgba(0,0,0,.04);
        }

        .table-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,.06);
        }

        .table-card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.1rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            flex-wrap: wrap;
            gap: .75rem;
        }

            .table-card-header .title {
                font-family: var(--font-display);
                font-weight: 700;
                font-size: .95rem;
                color: #1a202c;
                display: flex;
                align-items: center;
                gap: .5rem;
            }

        .rota-count {
            background: #fff7ed;
            color: #ea580c;
            font-size: .72rem;
            font-weight: 600;
            padding: .2rem .6rem;
            border-radius: 20px;
        }

        .rota-table {
            width: 100%;
            border-collapse: collapse;
        }

            .rota-table thead th {
                background: #f8fafc;
                font-size: .72rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: .06em;
                color: #718096;
                padding: .85rem 1rem;
                border-bottom: 1px solid #e2e8f0;
                white-space: nowrap;
            }

            .rota-table tbody tr {
                transition: background .12s;
                border-bottom: 1px solid #f0f4f8;
            }

                .rota-table tbody tr:last-child {
                    border-bottom: none;
                }

                .rota-table tbody tr:hover {
                    background: #f8fafc;
                }

            .rota-table tbody td {
                padding: .85rem 1rem;
                vertical-align: middle;
                font-size: .875rem;
                color: #2d3748;
            }

        .rota-name {
            font-weight: 600;
            color: #1a202c;
            font-size: .9rem;
        }

        .tour-badge {
            display: inline-flex;
            align-items: center;
            gap: .3rem;
            background: #eff6ff;
            color: #2563eb;
            font-size: .75rem;
            font-weight: 600;
            padding: .25rem .65rem;
            border-radius: 8px;
        }

        .id-badge {
            display: inline-block;
            font-size: .72rem;
            font-weight: 600;
            color: #6366f1;
            background: #eef2ff;
            padding: .18rem .55rem;
            border-radius: 6px;
            font-family: monospace;
        }

        .action-group {
            display: flex;
            align-items: center;
            gap: .35rem;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: grid;
            place-items: center;
            border: none;
            cursor: pointer;
            font-size: .85rem;
            transition: all .15s;
            text-decoration: none;
            flex-shrink: 0;
        }

        .btn-edit {
            background: #fffbeb;
            color: #d97706;
        }

            .btn-edit:hover {
                background: #fde68a;
                color: #92400e;
            }

        .btn-detail {
            background: #ebf8ff;
            color: #2b6cb0;
        }

            .btn-detail:hover {
                background: #bee3f8;
                color: #2c5282;
            }

        .btn-delete {
            background: #fff5f5;
            color: #e53e3e;
        }

            .btn-delete:hover {
                background: #fed7d7;
                color: #c53030;
            }

        .pagination-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            border-top: 1px solid #e2e8f0;
        }

        .page-info {
            font-size: .8rem;
            color: #718096;
        }

        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
            color: #a0aec0;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                display: block;
            }

        @@media (max-width:991px) {
            .rota-table thead {
                display: none;
            }

            .rota-table tbody tr {
                display: flex;
                flex-wrap: wrap;
                padding: 1rem;
                border: 1px solid #e2e8f0;
                border-radius: 10px;
                margin: .75rem 1rem;
                gap: .5rem;
            }

            .rota-table tbody td {
                display: flex;
                align-items: center;
                gap: .5rem;
                padding: .3rem 0;
                border: none;
                width: 100%;
                font-size: .85rem;
            }

                .rota-table tbody td::before {
                    content: attr(data-label);
                    font-size: .7rem;
                    font-weight: 600;
                    text-transform: uppercase;
                    letter-spacing: .05em;
                    color: #a0aec0;
                    min-width: 90px;
                    flex-shrink: 0;
                }

            .action-group {
                width: 100%;
                justify-content: flex-end;
            }
        }

        @@media (max-width:575px) {
            .page-header {
                flex-direction: column;
            }
        }
    </style>
}

<div class="page-header">
    <div>
        <h1 class="page-title">Rota Listesi</h1>
        <nav aria-label="breadcrumb" class="mt-2">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                <li class="breadcrumb-item active">Rotalar</li>
            </ol>
        </nav>
    </div>
    <a href="/AdminTourRota/CreateTourRota/" class="btn btn-primary d-flex align-items-center gap-2"
       style="border-radius:10px;font-size:.875rem;font-weight:600;padding:.55rem 1.1rem;">
        <i class="bi bi-plus-lg"></i> Yeni Rota Ekle
    </a>
</div>

<div class="filter-card">
    <form method="get">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-8">
                <label class="form-label fw-semibold" style="font-size:.78rem;color:#718096">Rota Ara</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0" style="border-radius:8px 0 0 8px;">
                        <i class="bi bi-search text-muted" style="font-size:.85rem;"></i>
                    </span>
                    <input type="text" name="q" value="@q" class="form-control border-start-0 ps-1"
                           placeholder="Rota adı ara..." style="border-radius:0 8px 8px 0;" />
                </div>
            </div>
            <div class="col-12 col-md-4 d-flex gap-2 align-self-end">
                <button type="submit" class="btn btn-primary flex-fill" style="border-radius:8px;font-size:.875rem;">
                    <i class="bi bi-funnel me-1"></i> Filtrele
                </button>
                <a href="?" class="btn btn-outline-secondary" style="border-radius:8px;font-size:.875rem;">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </form>
</div>

<div class="table-card">
    <div class="table-card-header">
        <div class="title">
            <i class="bi bi-signpost-split" style="color:#a0aec0;"></i>
            Tüm Rotalar
            <span class="rota-count">@Model.Count rota</span>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-signpost-split"></i>
            <p>Gösterilecek rota bulunamadı.</p>
            <a href="/AdminTourRota/CreateTourRota/" class="btn btn-primary btn-sm mt-2" style="border-radius:8px;">Yeni Rota Ekle</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="rota-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rota Adı</th>
                        <th>Tur</th>
                        <th>Rota ID</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowIndex = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="#">
                                <span style="font-size:.78rem;color:#a0aec0;font-weight:600;">@rowIndex</span>
                            </td>
                            <td data-label="Rota Adı">
                                <div style="display:flex;align-items:center;gap:.6rem;">
                                    <div style="width:34px;height:34px;border-radius:8px;background:#fff7ed;display:grid;place-items:center;color:#ea580c;font-size:.9rem;flex-shrink:0;">
                                        <i class="bi bi-signpost"></i>
                                    </div>
                                    <span class="rota-name">@item.Name</span>
                                </div>
                            </td>
                            <td data-label="Tur">
                                <span class="tour-badge">
                                    <i class="bi bi-map"></i>
                                    @((ViewBag.TourDict as Dictionary<string, string>)?.GetValueOrDefault(item.TourId) ?? "Belirtilmemiş")
                                </span>
                            </td>
                            <td data-label="Rota ID">
                                <span class="id-badge">@item.TourRotaId</span>
                            </td>
                            <td data-label="İşlemler">
                                <div class="action-group">
                                    <a asp-action="UpdateTourRota" asp-route-id="@item.TourRotaId"
                                       class="btn-action btn-edit" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn-action btn-detail" title="Detay"
                                            onclick="showRotaDetail(
                                                        '@item.TourRotaId',
                                                        '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Name))',
                                                        '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode((ViewBag.TourDict as Dictionary<string, string>)?.GetValueOrDefault(item.TourId) ?? "Belirtilmemiş"))',
                                                        '@item.TourId')">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button" class="btn-action btn-delete" title="Sil"
                                            onclick="confirmDelete('@item.TourRotaId','@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(item.Name))')">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        rowIndex++;
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination-wrapper">
            <span class="page-info">@Model.Count rota gösteriliyor</span>
        </div>
    }
</div>

<!-- DETAIL MODAL -->
<div class="modal fade" id="rotaDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:460px">
        <div class="modal-content" style="border-radius:16px;border:0;box-shadow:0 24px 64px rgba(0,0,0,.18);overflow:hidden;">
            <div style="background:linear-gradient(135deg,#ea580c 0%,#f97316 100%);padding:1.75rem 1.75rem 1.25rem;position:relative;">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        style="position:absolute;top:1rem;right:1rem;"></button>
                <div style="width:52px;height:52px;background:rgba(255,255,255,.2);border-radius:12px;display:grid;place-items:center;font-size:1.4rem;color:#fff;border:2px solid rgba(255,255,255,.3);margin-bottom:1rem;">
                    <i class="bi bi-signpost-fill"></i>
                </div>
                <h5 id="rotaDetailName"
                    style="font-family:var(--font-display);font-weight:800;font-size:1.2rem;color:#fff;margin:0;">
                    —
                </h5>
                <p style="font-size:.78rem;color:rgba(255,255,255,.7);margin:.25rem 0 0;">Rota Detayı</p>
            </div>
            <div class="modal-body p-0">
                <div style="padding:1.5rem 1.75rem;display:flex;flex-direction:column;gap:.85rem;">
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#fff7ed;border-radius:10px;border:1px solid #fed7aa;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#ea580c;">Tur</span>
                        <span id="rotaDetailTour" style="font-size:.875rem;font-weight:600;color:#2563eb;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Tur ID</span>
                        <span id="rotaDetailTourId" style="font-size:.8rem;font-weight:600;color:#6366f1;background:#eef2ff;padding:.18rem .55rem;border-radius:6px;font-family:monospace;">—</span>
                    </div>
                    <div style="display:flex;align-items:center;justify-content:space-between;padding:.75rem 1rem;background:#f8fafc;border-radius:10px;border:1px solid #e2e8f0;">
                        <span style="font-size:.75rem;font-weight:600;text-transform:uppercase;color:#a0aec0;">Rota ID</span>
                        <span id="rotaDetailId" style="font-size:.8rem;font-weight:600;color:#6366f1;background:#eef2ff;padding:.18rem .55rem;border-radius:6px;font-family:monospace;">—</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 px-4 pb-4 pt-0">
                <button type="button" class="btn btn-light w-100" data-bs-dismiss="modal"
                        style="border-radius:9px;font-size:.875rem;">
                    Kapat
                </button>
            </div>
        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:420px">
        <div class="modal-content" style="border-radius:14px;border:0;box-shadow:0 20px 60px rgba(0,0,0,.15)">
            <div class="modal-body p-4 text-center">
                <div style="width:60px;height:60px;background:#fff5f5;border-radius:50%;display:grid;place-items:center;margin:0 auto 1.25rem;font-size:1.5rem;color:#e53e3e;">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 style="font-family:var(--font-display);font-weight:700;font-size:1.1rem;color:#1a202c;margin-bottom:.5rem;">Rota Silinecek</h5>
                <p class="text-muted" style="font-size:.875rem;" id="deleteModalBody"></p>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4 px-4 d-flex gap-2">
                <button type="button" class="btn btn-light flex-fill" data-bs-dismiss="modal" style="border-radius:9px;font-size:.875rem;">İptal</button>
                <form id="deleteForm" method="post" style="flex:1">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100" style="border-radius:9px;font-size:.875rem;">
                        <i class="bi bi-trash3 me-1"></i> Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRotaDetail(rotaId, name, tourTitle, tourId) {
            document.getElementById('rotaDetailName').textContent = name;
            document.getElementById('rotaDetailTour').textContent = tourTitle;
            document.getElementById('rotaDetailTourId').textContent = tourId;
            document.getElementById('rotaDetailId').textContent = rotaId;
            new bootstrap.Modal(document.getElementById('rotaDetailModal')).show();
        }

        function confirmDelete(rotaId, name) {
            document.getElementById('deleteModalBody').textContent = '"' + name + '" adlı rota kalıcı olarak silinecek.';
            document.getElementById('deleteForm').action = '/AdminTourRota/DeleteTourRota/' + rotaId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}